          <section class="section" style="background:rgb(245,245,245)">

            <div class="container">

              <h1 class="title">Crear Token</h1>
              <div class="columns">

                <div class="column">

                    <form class="control" action="/token" method="POST">

                      <div class="field">
                        <div class="control">
                          <label for="">Nombre de Token</label>
                          <input class="input" name="name" maxlength="50" activate="false" type="text" required>
                        </div>
                      </div>

                      <div class="field">
                          <div class="control">
                              <label for="">Codigo</label>
                            <input class="input" name="code" activate="false" minlength="3" maxlength="5" title="" type="text" required>
                          </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <label for="">Decimales</label>
                              <input class="input" name="decimals" min="1" max="18" activate="false" pattern="[1-9]{1,18}" type="number" required>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <label for="">Cantidad total</label>
                              <input class="input" name="supply" activate="false" min="1"  type="number" required>
                            </div>
                        </div>

                        <p class="control">
                          <input class="button is-success" type="submit" value="Crear">
                        </p>
                      
                        
                    </form>
                     <hr> 
                    <% if(SuccessMessage.length > 0) {%>
                      <div id="notification" class="notification is-success">
                        <button onclick="closeNoti()" class="delete"></button>
                        <%= SuccessMessage %>
                      </div>  
                    <% } %>

                    <% if(ErrorMessage.length > 0) {%>
                      <div id="notification" class="notification is-danger">
                        <button onclick="closeNoti()" class="delete"></button>
                        <%= ErrorMessage %>
                      </div>  
                    <% } %>
                   
                </div>

                <div class="column">
                    <div>
  
                    </div>
                  </div>
                  
              </div>
              
            </div>

          </section>
            
          <script>

             const closeNoti= ()=>{
                      let div=document.getElementById('notification');
                      div.style.display="none"
                    }

          </script>

